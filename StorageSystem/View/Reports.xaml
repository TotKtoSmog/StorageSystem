<Page x:Class="StorageSystem.View.Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StorageSystem.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:StorageSystem.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reports">
    <Page.DataContext>
        <vm:ReportsViewModel/>
    </Page.DataContext>
    <Grid>
        
        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock DockPanel.Dock="Top" Text="Отчеты" FontSize="24"/>
            <Button Margin="10" DockPanel.Dock="Left" materialDesign:ButtonAssist.CornerRadius="10"
                    Width="217" Height="63" Command="{Binding RemainsWarehouse}">
                <TextBlock FontSize="20" Text="Остатки на складе" />
            </Button>
        </DockPanel>
    </Grid>
</Page>
